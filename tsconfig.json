{
  "compilerOptions": {
    "lib": [
      "es2023",
      "dom"
    ],
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "noEmit": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "jsx": "react"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/*.spec.tsx", "**/*.test.tsx"],
}
